#!/bin/sh

rm -rf root cross morpheus.log
. ./prepare-env
. ./prepare-root

mkdir -p src cross

# Deps list
./build cross-scripts/musl
./build cross-scripts/libevent
./build cross-scripts/ncurses
./build cross-scripts/zlib

# Build stage0 packages
pkglist=$(ls pkgs)
for pkg in $pkglist; do
	./build pkgs/$pkg
done

echo OK!
