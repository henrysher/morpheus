mkdir -p $root
cd $root
mkdir -p boot bin dev emul etc home opt proc root share src sys tmp var
mkdir -p dev/pts dev/shm opt/cross share/doc share/fonts/encodings share/man var/empty var/log var/run
rm -f include
ln -s opt/cross/x86_64-linux-musl/x86_64-linux-musl/include include
rm -f lib
ln -s opt/cross/x86_64-linux-musl/x86_64-linux-musl/lib lib
rm -f usr
ln -s . usr
rm -f sbin
ln -s bin sbin
rm -f var/tmp
ln -s ../tmp var/tmp
chmod 1777 tmp
chmod 700 root
cd -
