url=http://dl.2f30.org/morpheus-pkgs/musl-0.9.13.tar.gz

fetch() {
	wget -c $url -O src/musl-0.9.13.tar.gz
}

unpack() {
	pushd src
	[ -d musl-0.9.13 ] || tar xzf musl-0.9.13.tar.gz
	popd
}

build() {
	pushd src/musl-0.9.13
	./configure --prefix=$top/cross --syslibdir=$top/cross/lib
	make -j2
	popd
}

install() {
	pushd src/musl-0.9.13
	make install
	popd
}
