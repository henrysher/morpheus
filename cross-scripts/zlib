url=$mirror/zlib-1.2.8.tar.gz

fetch() {
	wget -c $url -O src/zlib-1.2.8.tar.gz
}

unpack() {
	pushd src
	[ -d zlib-1.2.8 ] || tar xzf zlib-1.2.8.tar.gz
	popd
}

build() {
	pushd src/zlib-1.2.8
	CC=x86_64-linux-musl-gcc ./configure --prefix=$top/cross --static || return 1
	make -j$nprocs || return 1
	popd
}

install() {
	pushd src/zlib-1.2.8
	make install || return 1
	popd
}
