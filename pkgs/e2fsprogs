n="e2fsprogs"
v="1.42.9"
url="https://www.kernel.org/pub/linux/kernel/people/tytso/e2fsprogs/v$v/$n-$v.tar.gz"

build: crossmusl
	cd src/$n-$v
	CC="$CC -static" CFLAGS="-D__uint64_t=u_int64_t" ./configure --prefix="" --mandir="$root/share/man" \
		--disable-nls
	make -j$nprocs
	make DESTDIR=$root install install-libs
	# ripped from sabotage: install libuuid, needed for cryptsetup
	cd lib/uuid
	make DESTDIR=$root install
