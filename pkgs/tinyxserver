url="$mirror/tinyxserver.tar.gz"

build: tinyxlib zlib
	cd src/tinyxserver
	case "$arch" in
	x86_64)
		EXTRA_CFLAGS="-D_XSERVER64=1 $CFLAGS"
		;;
	i486)
		EXTRA_CFLAGS="$CFLAGS"
		;;
	esac
	make clean
	make -j$nprocs CC=$CC EXTRA_CFLAGS="$EXTRA_CFLAGS" \
		FONTDIR="/usr/share/fonts"
	make DESTDIR="$root" BINDIR="/bin" install
	cd "$root/usr/share/fonts/misc"
	mkfontscale
	mkfontdir
