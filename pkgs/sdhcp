url=$mirror/sdhcp.tar.gz

fetch() {
	wget -c $url -O src/sdhcp.tar.gz
}

unpack() {
	pushd src
	[ -d sdhcp ] || tar xzf sdhcp.tar.gz
	popd
}

build() {
	pushd src/sdhcp
	make clean
	make CC=x86_64-linux-musl-gcc LDFLAGS=-static || return 1
	popd
}

install() {
	cp src/sdhcp/sdhcp $root/bin || return 1
}
