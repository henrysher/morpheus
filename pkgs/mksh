url=$mirror/mksh-R47.tar.gz

fetch() {
	wget -c $url -O src/mksh-R47.tar.gz
}

unpack() {
	cd src
	[ -d mksh ] || tar xzf mksh-R47.tar.gz
	cd -
}

build() {
	cd src/mksh
	CC=x86_64-linux-musl-gcc LDFLAGS=-static sh Build.sh || return 1
	cd -
}

install() {
	cp src/mksh/mksh $root/bin
	cd $root/bin
	ln -sf /bin/mksh sh
	cd -
}
