url=$mirror/$pkg

# Fetch package
wget -c $url -O src/$pkg

# Install package
pushd src/
chmod +x $pkg
cp $pkg $root/bin
pushd $root/bin
ln -s busybox ifconfig
ln -s busybox nc
ln -s busybox getty
ln -s busybox login
ln -s busybox find
ln -s busybox du
ln -s busybox ping
ln -s busybox wget
ln -s busybox vi
popd
popd
