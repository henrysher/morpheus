url=$mirror/busybox

fetch() {
	wget -c $url -O src/busybox
}

install() {
	# Install package
	cd src/
	chmod +x busybox
	cp busybox $root/bin
	cd -
	cd $root/bin
	ln -sf busybox addgroup
	ln -sf busybox adduser
	ln -sf busybox awk
	ln -sf busybox bzip2
	ln -sf busybox delgroup
	ln -sf busybox deluser
	ln -sf busybox diff
	ln -sf busybox dd
	ln -sf busybox ed
	ln -sf busybox expr
	ln -sf busybox find
	ln -sf busybox fuser
	ln -sf busybox gzip
	ln -sf busybox hexdump
	ln -sf busybox hwclock
	ln -sf busybox ifconfig
	ln -sf busybox kbd_mode
	ln -sf busybox killall5
	ln -sf busybox less
	ln -sf busybox login
	ln -sf busybox nc
	ln -sf busybox passwd
	ln -sf busybox ping
	ln -sf busybox pkill
	ln -sf busybox printf
	ln -sf busybox sed
	ln -sf busybox sysctl
	ln -sf busybox tac
	ln -sf busybox telnet
	ln -sf busybox tftp
	ln -sf busybox tftpd
	ln -sf busybox top
	ln -sf busybox vi
	ln -sf busybox wget
	cd -
}
