git="git://git.2f30.org/sbase"

build: crossmusl
	set -x
	cd src/sbase
	for f in util/*.c; do
		$CC -c $f -o "${f%%.c}.o" $CFLAGS
	done
	for f in util/*.o; do
		ar -r -c util.a $f
	done
	ranlib util.a
	for f in *.c; do
		$CC -c $f $CFLAGS
	done
	for f in *.o; do
		$CC -o "${f%.*}" $f util.a $LDFLAGS
	done
	for f in *.o; do
		cp "${f%.*}" "$root/bin"
	done
	mkdir -p "$root/share/man/man1"
	for f in *.1; do
		cp $f "$root/share/man/man1"
	done
	# these are still buggy
	for f in grep cp tar ; do
		rm "$root/bin/$f"
		rm "$root/share/man/man1/$f.1"
	done
