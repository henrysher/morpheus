git="git://git.2f30.org/sbase"

build: crossmusl
	set -x
	cd src/sbase
	for f in util/*.c; do
		$CC -c $f -o "${f%%.c}.o" $CFLAGS
	done
	for f in util/*.o; do
		ar -r -c util.a $f
	done
	ranlib util.a
	for f in *.c; do
		$CC -c $f $CFLAGS
	done
	for f in *.o; do
		$CC -o "${f%.*}" $f util.a $LDFLAGS
	done
	mkdir -p "$root/share/man/man1"
	for f in *.o; do
		cp "${f%.*}" "$root/bin"
		cp "${f%%.o}.1" "$root/share/man/man1"
	done
