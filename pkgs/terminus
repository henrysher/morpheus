v="4.38"
url="$mirror/terminus-font-$v.tar.gz"

build: crossmusl
	cd src/terminus-font-$v
	sh configure --psfdir="$root/share/fonts/console" \
		--x11dir="$root/share/fonts/misc"
	make
	make DESTDIR=/ install
	cd "$root/share/fonts/misc"
	gzip -d *.gz
	mkfontscale
	mkfontdir
	cd "$root/share/fonts/console"
	gzip -d *.gz
