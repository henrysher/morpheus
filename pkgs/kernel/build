v="3.10.32"
url="$mirror/kernel.tar.gz"

build: crossmusl
	cd src/linux-$v
	cp "$top/stuff/kernel-config-$arch" .config
	case "$arch" in
	x86_64)
		A=x86_64
		;;
	i486)
		A=x86
		;;
	esac
	make ARCH="$A" bzImage -j$nprocs
	cp arch/x86/boot/bzImage "$root/boot"
	cp .config "$root/boot/bzImage.config"
	cp System.map "$root/boot"
