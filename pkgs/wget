url=$mirror/wget-1.14.tar.gz

fetch() {
	wget -c $url -O src/wget-1.14.tar.gz
}

unpack() {
	pushd src
	[ -d wget-1.14 ] || tar xzf wget-1.14.tar.gz
	popd
}

build() {
	pushd src/wget-1.14
	CC="musl-gcc -static" ./configure --prefix=$root --without-ssl || return 1
	make -j$nprocs || return 1
	popd
}

install() {
	pushd src/wget-1.14
	make install || return 1
	popd
}
