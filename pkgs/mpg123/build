v="1.18.0"
url="$mirror/mpg123-$v.tar.bz2"

build: tinyalsa
	cd src/mpg123-$v
	case "$arch" in
	x86_64)
		A=x86-64
		;;
	i486)
		A=x86
		;;
	esac
	CC=$CC ./configure --prefix="$root" --with-default-audio=tinyalsa \
		--enable-static=yes --enable-shared=no --with-cpu="$A"
	make -j$nprocs
	make install
